{
  "name": "compose-layouts",
  "private": true,
  "version": "1.0.0",
  "description": "A React component library that has a set of componen-agnostic layout components that allows you to put components together into a layout",
  "keywords": [
    "react",
    "react-component",
    "component",
    "reactjs"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BDuong0/compose-layouts"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "build-lib": "tsc -p component-lib/tsconfig.json && vite build --config vite.config.lib.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "cy:open": "cypress open",
    "check-updates": "ncu",
    "tokens:build": "node src/styles/tokens/append-design-tokens.cjs",
    "registry:build": "shadcn build"
  },
  "dependencies": {
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-slot": "^1.2.3",
    "@stylexjs/stylex": "^0.14.2",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "shadcn": "^2.9.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.31.0",
    "@stylexjs/babel-plugin": "^0.14.2",
    "@stylexjs/postcss-plugin": "^0.14.2",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.37.0",
    "vite": "^7.0.5"
  }
}
